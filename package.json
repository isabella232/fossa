{
  "name": "fossa",
  "version": "2.6.12",
  "description": "Backbone powered model interface to MongoDB, thin wrapper around MongoJS",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test ./node_modules/.bin/mocha $(find test -name '*.test.js')",
    "coverage": "NODE_ENV=test ./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js || true && rm -rf ./coverage"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:observing/fossa.git"
  },
  "keywords": [
    "Fossa",
    "thin",
    "wrapper",
    "backbone",
    "model",
    "interface",
    "mongoose"
  ],
  "author": "Martijn Swaagman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/observing/fossa/issues"
  },
  "dependencies": {
    "async": "~0.9.0",
    "backbone": "~1.1.0",
    "eventemitter3": "~0.1.2",
    "extendable": "~0.0.6",
    "fusing": "~0.3.0",
    "mongodb": "~1.4.5",
    "predefine": "~0.1.1"
  },
  "devDependencies": {
    "coveralls": "~2.10.0",
    "mocha-lcov-reporter": "~0.0.1",
    "istanbul": "~0.2.6",
    "chai": "~1.9.1",
    "mocha": "~1.20.0",
    "pre-commit": "~0.0.0",
    "sinon": "~1.10.2",
    "sinon-chai": "~2.5.0"
  }
}
